<%- include('partials/header') %>
<%- include('partials/sidebar') %>
<div class="content">
    <%- include('partials/navbar') %>


    <!-- categories -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">Coupons</h6>
                <a class="btn btn-sm btn-primary mt-3 " href="/addCoupons">Add Coupons</a>
                <a href="">Show All</a>
            </div>
            <% if (locals.msg) { %>
                <div class="alert alert-danger" role="alert" id="alert" >
                    <%= msg %>
                </div> 
                <%}%>
            <div class="table-responsive">
                <% if(locals.coupon && locals.coupon.length > 0){%>
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col">Sl.No</th>
                            <th scope="col">Coupons Code</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">End Date</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                     
                        <% coupon.forEach((coupon,index) =>{%>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= coupon.code %></td>
                            <td><%= coupon.discount %> â‚¹</td>
                            <td><%= coupon.startingDate.toLocaleDateString() %></td>
                            <td><%= coupon.expiryDate.toLocaleDateString() %></td>
                            <% if(coupon.status){%>
                            <td> <a class="btn btn-danger" href="/deactivate_coupon/<%= coupon._id %>" role="button"style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" >De-activate</a>
                            </td><%}
                            else{%><td> <a class="btn btn-success" href="/activate_coupon/<%= coupon._id %>" role="button">Activate</a></td><%} %>
                            
                            <td>
                               
                                <a href="" data-bs-toggle="modal" data-bs-target="#exampleModal<%= coupon._id %>" class="btn border-shadow update" title="Update coupon">
                                                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                                </a>
                               
                            
                                <a href="/deleteCoupons/<%= coupon._id %>"
                                    class="btn border-shadow delete"  onclick="confirmdelete(event,'<%= coupon._id %>')" title="Delete coupon">
                                    <span class="text-gradient">
                                        <i class="fas fa-times"></i>
                                    </span>
                                </a>
                               
                            </td>
                        </tr>

                       
                        <%}) %>
                           
                        <%}else{%>
                            <h2 style="text-align: center;">Coupon list is Empty</h2>
                            <%} %>
                        
                        
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
    <!-- categories  -->


   
    <% if(locals.coupon && locals.coupon.length > 0){%>
        <% coupon.forEach((coupon,index) =>{%>
            <div class="modal fade" id="exampleModal<%= coupon._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel" style="color: black;">Status updated</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/editCoupon/<%= coupon._id %>" method="post">
          
          
          
                                <div class="form-group row">
                                    <div class="col-md-12">
                                    <label for="code" class="text-black">Coupon code </label>
                                    <input type="text" class="form-control" id="name" name="code" value="<%= coupon.code %>" required>
                                    </div>
                                    
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-12">
                                    <label for="discount" class="text-black">Discount  </label>
                                    <input type="text" class="form-control" id="address" name="discount" value="<%= coupon.discount %>" required>
                                    </div>
                                </div>

                                

                                <div class="form-group row">
                                    <div class="col-md-6">
                                    <label for="startingDate" class="text-black">Starting date</label>
                                    <input type="date" class="form-control" id="city" name="startingDate" value="<%= coupon.startingDate ? coupon.startingDate.toISOString().split('T')[0] : '' %>" required>
                                    </div>
                                    <div class="col-md-6">
                                    <label for="expiryDate" class="text-black">Ending date</label>
                                    <input type="date" class="form-control" id="state" name="expiryDate" value="<%= coupon.expiryDate ? coupon.expiryDate.toISOString().split('T')[0] : '' %>" required>
                                    </div>
                                </div>
                                    </div>
                                    <div class="modal-footer">
                                        
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                            </form>
                        </div>
                    </div>
                    </div>
                </div>
            <%}) %>
        <%} %>


   

   
</div>
<!-- Content End -->

<script>
    setTimeout(()=>{
        document.getElementById("alert").style.display = "none";
    },2000)

    
    function confirmdelete(event,couponId) {
      event.preventDefault(); // Prevent the link from immediately navigating
    
      swal({
        title: "Do you really want to delete the coupon?",
        icon: "warning",
        buttons: {
          cancel: "No",
          confirm: "Yes"
        },
      }).then((confirmed) => {
        if (confirmed) {
          swal({
            title: "Coupon deleted successfully!",
            icon: "success",
          }).then(() => {
            window.location.href = "/deleteCoupons/" + couponId; // Navigate to the block_pdt URL
          });
        }
      });
    }
 </script>

<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>

