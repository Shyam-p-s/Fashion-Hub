<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Log In</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="/user_loginAssets/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/user_loginAssets/css/style.css">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>

    <div class="main">
     <!-- log in  Form -->
     <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="/user_loginAssets/images/signin-image.jpg" alt="sing up image"></figure>
                    <a href="/signup" class="signup-image-link">Create an account</a>
                    <a href="/" class="signup-image-link">Home</a>
                </div>

                
                <div class="signin-form">
                    <h2 class="form-title">Log In</h2>
                    <!-- alert -->
                    <% if (locals.msg) { %>
                    <div class="alert alert-success" role="alert" id="alert" >
                        <%= msg %>
                    </div>        
                        <% } %>
                        <% if (locals.messsage) { %>
                            <div class="alert alert-danger" role="alert" id="alert" >
                                <%= messsage %>
                            </div>        
                                <% } %>
                    
                    
                    <form method="POST" action="/send-otp" class="register-form mb-3" id="login-form" mb-3>
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-smartphone-android"></i></label>
                            <input type="text" name="phone" id="name" placeholder="Your Mobile Number" required/>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Get OTP"/>
                        </div>
                    </form>

                    <form method="POST" action="/verify-otp" class="register-form" id="login-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-lock"></i></i></label>
                            <input type="text" name="otp" id="name" placeholder="Your One Time Password" required/>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in"/>
                        </div>
                        <div class="form-group">
                         <a href="/login" class="signup-image-link">Login with email</a>
                        </div>
                    </form>
                    
                    
                </div>
            </div>
        </div>
    </section>
    </div>

     


     <!-- JS -->
     <script src="/user_loginAssets/vendor/jquery/jquery.min.js"></script>
     <script src="/user_loginAssets/js/main.js"></script>
     <script>
        setTimeout(()=>{
            document.getElementById("alert").style.display = "none";
        },2000)
     </script>
 </body><!-- This templates was made by Colorlib (https://colorlib.com) -->
 </html>