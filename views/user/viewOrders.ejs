     <!-- sweet alert -->
    <script>


      function confirmdelete(event) {
      event.preventDefault(); // Prevent the link from immediately navigating
    
      swal({
        title: "Do you really want to cancel the order?",
        icon: "warning",
        buttons: {
          cancel: "No",
          confirm: "Yes"
        },
      }).then((confirmed) => {
        if (confirmed) {
          swal({
            title: "Order cancelled successfully!",
            icon: "success",
          }).then(() => {
            window.location.href = event.target.href; // Navigate to the block_pdt URL
          });
        }
      });
    }

    function confirmReturn(event) {
      event.preventDefault(); // Prevent the link from immediately navigating
    
      swal({
        title: "Do you really want to return the order?",
        icon: "warning",
        buttons: {
          cancel: "No",
          confirm: "Yes"
        },
      }).then((confirmed) => {
        if (confirmed) {
          swal({
            title: "Order returned successfully!",
            icon: "success",
          }).then(() => {
            window.location.href = event.target.href; // Navigate to the block_pdt URL
          });
        }
      });
    }
    
    </script>

