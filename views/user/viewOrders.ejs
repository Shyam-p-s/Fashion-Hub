    <% if(!locals.orders || orders.length ==0) {%>
      <div class="container center mt-5">
        <h2 style="text-align: center;">Sorry, no order history found</h2>
        <h5 style="text-align: center;">Kindly purchase from our shop</h5>
        <a class="btn btn-primary text-light mb-5 d-flex justify-content-center" href="/" role="button">Return Home</a>
      </div>
    <%}else{%>
      <!-- Recent Sales Start -->
      <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h3 class="mb-0">Your Orders</h3>
                
            </div>
            <div class="table-responsive">
                <table  class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col">Date</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Address</th>
                            <th scope="col">Payment Method</th>
                            <th scope="col">Image</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% orders.reverse().forEach((orders,index) =>{%>
                        
                        
                        
                            <tr>
                                <td><%= orders.createdAt.toLocaleDateString() %></td>
                                <td>
                                   <% orders.items.forEach((item, index) => { %>
                                  <%= index+1 %>. <%= item.product.name %> <br>
                                  <% }) %>
                                </td>
                                <td><%= orders.total %></td>
                                <td><%= orders.address.address %>, <%= orders.address.city %>,<br>
                                  <%= orders.address.state %>, pin: <%= orders.address.pincode %><br>
                                  phone: <%= orders.address.phone %>
                                </td>
                                <td>
                                  <%= orders.payment_method%>
                                  
                                </td>
                                
                                <td>
                                  <% orders.items.forEach((item, index) => { %>
                                    <img src="/<%= item.product.image[0] %>" alt="img" width="40px" class="img-thumbnail" > <br>
                                  <%})%>
                                </td>
                                <td><%= orders.status %></td>
                                <% if (orders.status == 'Pending') { %>
                                  <td><a class="btn btn-sm btn-danger" href="/orderCancelled/<%= orders._id %>" onclick="confirmdelete(event)">Cancel</a>
                                    <div>
                                      <a href="/user/orderDetails/<%= orders._id %>" class="link-danger" style="font-weight: bold; text-decoration: underline; color: red;">Order details</a>
  
                                    </div>
                                  </td>
                                <% } else if (orders.status == 'Delivered') { %>
                                  <td><a class="btn btn-sm btn-danger" href="/orderReturned/<%= orders._id %>" onclick="confirmReturn(event)">Return</a>
                                    <div>
                                      <a href="/user/orderDetails/<%= orders._id %>" class="link-danger" style="font-weight: bold; text-decoration: underline; color: red;">Order details</a>
  
                                    </div>
                                  </td>
                                <% } else if (orders.status == 'Cancelled')  { %>
                                  <td>Order Cancelled</td>
                                <% }else if (orders.status == 'Returned')  { %>
                                  <td>Order Returned</td>
                                <% } %>
                                 
                                


                            </tr>
                      
                        
                          <%}) %>
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
    <%} %>
    <!-- Recent Sales End -->






